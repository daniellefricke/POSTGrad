<h1>Edit This Post</h1>

<%= form_for [@school, @post] do |f|%>

  <%=f.label :post_title %><br>
  <%=f.text_area :title, size: "50x1" %>
<div class="container">
  <%=f.label :content %><br>
  <%=f.text_area :content, size: "50x10" %>
</div>
  <%= f.submit "Create"%>
<%end%>

<%= form_for [@school, @post], method: :delete do |f| %>
  <%= f.submit "Delete this Post!", class: "delete" %>
<% end %>
